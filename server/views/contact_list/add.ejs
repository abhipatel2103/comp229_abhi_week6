<!DOCTYPE html>
<html lang="en">
<head>
	<%- include ../Partials/header.ejs %>

</head>
<body>

<%- include ../Partials/main_nav.ejs %>

<!--Content for the Add page-->

<div class="container">
	<div class="row">
		<div class="offset-md-2 col-md-8">
		<h1><%= title %></h1>

			<form class="form" method = "POST">
				<div class="form-group">
					<label for="nameTextField">Contact Name</label>
					<input type="text" class="form-control" id="nameTextField" placeholder="Enter the Contact Name" name="name" required>
				</div>
				
				<div class="form-group">
					<label for="numberTextField">Contact Number</label>
					<input type="text" class="form-control" id="numberTextField" placeholder="Enter the Contact Number" name="number" required>
				</div>

				<div class="form-group">
					<label for="emailTextField">Email Address</label>
					<input type="text" class="form-control" id="emailTextField" placeholder="Enter the Email Address" name="email" required>
				</div>

				<button class="btn btn-primary" type="submit">
					<i class="fas fas-edit"></i> Submit
				</button>

				<a href="/contact-list" class="btn btn-warning">
				<i class="fas fa-undo"></i> Cancel
				</a>

			</form>
		</div>
	</div>
</div>






<%- include ../Partials/bottom_nav.ejs %>  

<%- include ../Partials/footer.ejs %>
<style>
.logo {
    position: relative;
    top: 0;
    right: 0;
    left: 0;
    z-index: 0;
    height: 40px;
    margin-right: 7px;
}
@media(min-width:1200px){
main.container { height: calc(100vh - 125px); }
}
</style>
</body>
</html>